@{
    ViewData["Title"] = "New Trail Page";
}
<h1>Add A New Trail</h1>
@model Lost_in_the_Woods.Models.TrailViewModel
<form asp-controller="Trail" asp-action="create" method="POST">
  <div class="form-group">
    <span asp-validation-for="Name"></span>
    <label asp-for="Name">Trail Name:</label>
    <input class="form-control" asp-for="Name">
  </div>
  <div class="form-group">
    <span asp-validation-for="Description"></span>
    <label asp-for="Description">Description:</label>
    <input class="form-control" asp-for="Description">
  </div>
  <div class="form-group">
    <span asp-validation-for="Length"></span>
    <label asp-for="Length">Trail Length:</label>
    <input class="form-control" asp-for="Length">
  </div>
  <div class="form-group">
    <span asp-validation-for="Elevation"></span>
    <label asp-for="Elevation">Elevation Change:</label>
    <input class="form-control" asp-for="Elevation">
  </div>
  <div class="form-group">
    <span asp-validation-for="Longitude"></span>
    <label asp-for="Longitude">Longitude:</label>
    <input class="form-control" asp-for="Longitude">
  </div>
  <div class="form-group">
    <span asp-validation-for="Latitude"></span>
    <label asp-for="Latitude">Latitude:</label>
    <input class="form-control" asp-for="Latitude">
  </div>
  <button type="submit" class="btn btn-primary">Create Record!</button>
</form>